{
  "manifest_version": 3,
  "name": "bar123 History Sync",
  "version": "1.0",
  "description": "Sync your Chrome browsing history with Pantry for cross-browser access",
  "permissions": [
    "history",
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://getpantry.cloud/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}